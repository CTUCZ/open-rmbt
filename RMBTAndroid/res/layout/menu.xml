<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/headerImageBg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription=""
        android:src="@drawable/header" />

    <LinearLayout
        android:id="@+id/menuButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3" >

        <RelativeLayout
            android:id="@+id/menuButtonStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:ignoreGravity="@+id/menuButtonStartText" >

            <Button
                android:id="@+id/menuButtonStartButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/menu_button_test" />

            <TextView
                android:id="@+id/menuButtonStartText"
                style="@style/textMenuButtonLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:paddingBottom="1dp"
                android:paddingLeft="50dp"
                android:text="@string/menu_button_start" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/menuButtonLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/menuButtonHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/menuButtonHistoryButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/menu_button_history" />

                <TextView
                    android:id="@+id/menuButtonHistoryText"
                    style="@style/textMenuButtonSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/menuButtonHistoryButton"
                    android:layout_centerHorizontal="true"
                    android:clickable="false"
                    android:paddingBottom="12dp"
                    android:paddingRight="8dp"
                    android:text="@string/menu_button_history" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/menuButtonMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/menuButtonMapButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/menu_button_map" />

                <TextView
                    android:id="@+id/menuButtonMapText"
                    style="@style/textMenuButtonSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/menuButtonMapButton"
                    android:layout_centerHorizontal="true"
                    android:clickable="false"
                    android:paddingBottom="12dp"
                    android:paddingLeft="8dp"
                    android:text="@string/menu_button_map" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuButtonLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/menuButtonStatistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/menuButtonStatisticsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/menu_button_statistics" />

                <TextView
                    android:id="@+id/menuButtonStatisticsText"
                    style="@style/textMenuButtonSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/menuButtonStatisticsButton"
                    android:layout_centerHorizontal="true"
                    android:clickable="false"
                    android:paddingBottom="12dp"
                    android:paddingRight="8dp"
                    android:text="@string/menu_button_statistics" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/menuButtonHelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/menuButtonHelpButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/menu_button_help" />

                <TextView
                    android:id="@+id/menuButtonHelpText"
                    style="@style/textMenuButtonSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/menuButtonHelpButton"
                    android:layout_centerHorizontal="true"
                    android:clickable="false"
                    android:paddingBottom="12dp"
                    android:paddingLeft="8dp"
                    android:text="@string/menu_button_help" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/menuBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom" >

        <RelativeLayout
            android:id="@+id/menuButtonAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingBottom="10dp" >

            <Button
                android:id="@+id/menuButtonAboutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/menu_button_about" />

            <TextView
                android:id="@+id/menuButtonAboutText"
                style="@style/textMenuButtonSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:paddingBottom="10dp"
                android:paddingLeft="4dp"
                android:text="@string/menu_button_about" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/buttonLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/menuButtonAbout"
            android:background="@android:color/transparent"
            android:contentDescription="@string/menu_button_about"
            android:paddingBottom="15dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/button_logo" />
        
        <RelativeLayout
            android:id="@+id/menuButtonSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="10dp" >

            <Button
                android:id="@+id/menuButtonSettingsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/menu_button_settings" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
