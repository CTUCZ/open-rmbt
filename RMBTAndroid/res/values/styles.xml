<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- TEXT -->
    
    <style name="textLargeDark" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#006398</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="textMediumDark" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#006398</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="textSmallDark" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#006398</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="textTinyDark" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#006398</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="textLargeLight" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="textMediumLight" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="textSmallLight" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="textTinyLight" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">12dp</item>
    </style>
    
    <style name="textTinyGrey" parent="@style/textTinyLight">
		<item name="android:textColor">#cccccc</item>
    	<item name="android:textStyle">bold</item>
    </style>
    
    <style name="infoText" parent="@style/textMediumLight">
         
    </style>
    
    <style name="blockHeader" parent="@style/textLargeDark">
        <item name="android:textColor">#002d45</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>
    
    <style name="blockHeaderSmall" parent="@style/blockHeader">
        <item name="android:textSize">12dp</item>	
    </style>
    
     <style name="listHeader" parent="@style/textTinyGrey">
        <item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:layout_marginBottom">2dp</item>
        
    </style>
    
    <style name="listViewHistoryLabelRowItem" parent="@style/textTinyLight">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="listViewHistoryRowItem" parent="@style/textTinyLight">
        
    </style>

    <style name="listResultItemTitle" parent="@style/textMediumLight">

    </style>
    
    <style name="listResultItemValue" parent="@style/textMediumLight">
		 <item name="android:textColor">#d2dde2</item>
    </style>
    
    <style name="balloonHeader" parent="@style/blockHeaderSmall">
        <item name="android:textSize">14dp</item>
    </style>
    
    <style name="balloonResultItemHeader" parent="@style/textMediumLight">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingLeft">5dp</item>
    	<item name="android:paddingRight">5dp</item>
    	<item name="android:paddingTop">2dp</item>
    	<item name="android:paddingBottom">2dp</item>
    	<item name="android:background">@drawable/bg_trans_light</item>
    	<item name="android:textStyle">bold</item>
		<item name="android:textSize">13dip</item>
    </style>
    
    <style name="balloonListHeader" parent="@style/listHeader">
		<item name="android:layout_marginTop">4dp</item>
		<item name="android:layout_marginBottom">2dp</item>
		<item name="android:textSize">10dip</item>
    </style>
    
    <style name="balloonResultItemTitle" parent="@style/listResultItemTitle">
		<item name="android:textSize">13dip</item>
    </style>
    
    <style name="balloonResultItemValue" parent="@style/listResultItemValue">
		 <item name="android:textSize">13dip</item>
    </style>
    
    <!-- BUTTONS -->

    <style name="textMenuButtonLarge" parent="@style/textLargeDark">
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="textMenuButtonMedium" parent="@style/textMediumDark">
        <item name="android:textSize">16dp</item>
    </style>
    
    <style name="textMenuButtonMediumFull" parent="@style/textMediumDark">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="textMenuButtonMediumFullDisabled" parent="@style/textMediumDark">
        <item name="android:textColor">#d2dde2</item>
    </style>

    <style name="textMenuButtonMediumLight" parent="@style/textMediumLight">
        <item name="android:textSize">16dp</item>
    </style>
    
    <style name="textMenuButtonSmallLight" parent="@style/textSmallLight">
        <item name="android:textSize">12dp</item>
    </style>
    
    <style name="textMenuButtonSmall" parent="@style/textTinyDark">
    </style>
    
    <!-- CONTAINER -->
	<style name="listViewDefault">
        <item name="android:cacheColorHint">#00000000</item>
		<item name="android:divider">@drawable/bg_trans_light_10</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:listSelector">@drawable/list_selector</item>
    </style>
    
	<style name="listViewAbout" parent="@style/listViewDefault">
		<item name="android:paddingTop">3dp</item>
		<item name="android:paddingBottom">3dp</item>
    </style>
    
	<style name="listViewAboutItem">
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:paddingTop">2dp</item>
		<item name="android:paddingBottom">2dp</item>
    </style>
    
	<style name="listViewHistory" parent="@style/listViewDefault">
        <item name="android:dividerHeight">2dp</item>
    </style>
    
	<style name="listViewHistoryLabelRow">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>
    
	<style name="listViewResult" parent="@style/listViewDefault">
		<item name="android:paddingLeft">5dp</item>
		<item name="android:paddingRight">5dp</item>
		<item name="android:paddingTop">0dp</item>
		<item name="android:paddingBottom">0dp</item>
    </style>
    
	<!-- Preferences Theming -->
	
	<style name="preferenceListSeparator" parent="@android:style/Widget.TextView">
    	<item name="android:orientation">vertical</item>
	</style>
	
	<style name="preferenceCategoryTitle" parent="@style/textTinyGrey">
	    <item name="android:layout_marginTop">10dp</item>
		<item name="android:paddingLeft">5dp</item>
		<item name="android:paddingTop">2dp</item>
		<item name="android:paddingBottom">2dp</item>
    </style>
	
	<style name="preferenceTitle" parent="@style/textMediumLight">

    </style>
	
	<style name="preferenceSummary" parent="@style/textTinyGrey">
		<item name="android:textStyle">normal</item>
    </style>
	
	<style name="preferenceListView" parent="@style/listViewDefault">

    </style>
	
	<style name="customPrefTheme" parent="@android:style/Theme.NoTitleBar">
    	<item name="android:windowBackground">@drawable/app_bgnd</item>
    	<item name="android:windowNoTitle">true</item>
    	<item name="android:listViewStyle">@style/preferenceListView</item>
    	<item name="android:textAppearance">@style/preferenceTitle</item>
    </style>
    
	<!--  Test Screen -->
	<style name="testText" parent="@style/textSmallDark">
	    <item name="android:textStyle">bold</item>
	    <item name="android:textSize">12dp</item>
	    <item name="android:lineSpacingExtra">4dp</item>
	</style>
	
    
</resources>
